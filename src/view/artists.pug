include head.pug
  title Artists | Big Hit Music
.container
  header
    // Navigation Bar
    // Author: Calica, Gwyneth M.
    nav
      a(href='view/index.pug')
        img(src='images/logo site.png' alt='logo')
      ul.nav-links
        li
          a(href='view/index.pug') Home
        li
          a(href='view/songs.pug') Music
        li
          a.link-focus(href='artists.html') Artists
        li
          a(href='about.html') About
      .burger
        .line1
        .line2
        .line3
  #artist-list
    // Content
    // Author: Natividad, Hudson Kit P.
    .all-artists
            h3 BigHit Artists
            hr
            ul#artist-list.list.artist
                each artist in artists
                   / li
                    .artist(id = artist.artistname)
                        h3 #{artist.artistname}
                        .artist-info
                            img(src= `${artist.artistimage}` alt='Artist image')
                            .artist-details
                                p
                                    | #{artist.artistname}
                                    br
                                    span
                                        small
                                            | Artist Nickname: #{artists.nickname}
                                            br
                                            | Debut Year: #{artists.debutyear}
                    br
  footer
    hr
    p(align='center') Copyright &copy; 2020 Alpha Group. All rights reserved.
  script(src='https://apis.google.com/js/client.js?onload=handleClientLoad')
  script(type='text/javascript' src='app.js')
