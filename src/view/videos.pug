include head.pug
    title Videos | Big Hit Music
header
    nav
        a(href='index.pug')
            img(src='images/logo site.png' alt='logo')
        ul.nav-links
            li
                a(href='index.pug') Home
            li
                a.link-focus(href='songs.html') Music
            li
                a(href='artists.html') Artists
            li
                a(href='about.html') About
        .burger
            .line1
            .line2
            .line3
.musicHeader
    h1 Videos List
    input#search-fld(type='text' placeholder='Type something..' name='search')
        button#search-btn(type='submit')
            img.search-icon(src='images/search-icon.png' alt='search icon')

.column
    #result-items-con
        .all-video-con(style='display: none;')
            h3 Videos
            hr
            #videos
                #videoContainer
                ul#video-list.list-con
                    each video in videos
                        li
                        .video-container(id = video.name)


        .all-video-con
            h3 Videos
            hr
            ul#song-list.list-con
                each track in tracks
                    li
                    .spotify-song-con(id = track.artistname)
                        h3 #{track.trackname}
                        .track-info
                            img(src= `${track.albumimg}` alt='Album image')
                            .song-desc-con
                                p
                                    | #{track.artistname}
                                    br
                                    span
                                        small
                                            | Album name: #{track.albumname}
                                            br
                                            | Released on: #{track.releaseddate}
                                button.album-btn(id = track.albumid) Play album
                                button.see-vid(id = track.trackname) See Music Videos
                    br